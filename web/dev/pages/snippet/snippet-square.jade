div
  div.text--center
    div.desktop__search
      form(ng-submit="submit()")
        input.desktop__input(type="text", placeholder="输入片段名称", ng-model="searchName")
        button.desktop__search-button(title="搜索", type="submit")
          span.icon-search
        a.desktop__add-button(href="/#/dashboard/snippets", title="添加代码片段")
          span.icon-plus
  div(auto-center, auto-center-length="snippets.length")
    a.panel(ng-repeat="snippet in snippets", href="/#/snippet/detail/{{snippet._id}}")
      div.panel__header
        span(ng-bind="snippet.name")
      div.panel__body
      div.panel__footer
        img.left.circle(src-element="http://identicon.relucks.org/{user.login}?size=20px", title="{{user.login}}")
        span.icon-copy(ng-click="fork($event, snippet._id)", ng-if="logined()", title="Fork代码片段")
        span.icon-info(title="by {{snippet.user}}", tip)
