div.add-app
  form.sidebar(action="/post/save/app", method="post", ng-submit="submit($event)")
    input(type="hidden", name="_id", value="{{data._id}}")
    div.add-app-editor(resize-box)
      div.jade-box
        span.box-name jade
        textarea(name="jade", ng-model="data.jade", ng-keydown='save($event)')
      div.css-box
        span.box-name css
        textarea(name="css", ng-model="data.css", ng-keydown='save($event)')
      div.js-box
        span.box-name js
        textarea(name="js", ng-model="data.js", ng-keydown='save($event)')
      div.preview-box
        span.box-name preview
        iframe(ng-src="{{previewUrl}}", border=0, frameBorder=0)
    div.add-app-toolbar
      h3.left(ng-bind="data.name")
      input.button.right(type="button", ng-repeat="layout in layouts", value="布局{{$index+1}}", ng-click="switchLayout($index+1)", ng-class="{active: layoutIndex === $index+1}")
      input.button.right(type="submit", value="保存")